{
	"ecmaFeatures": {
		"globalReturn": true,
		"modules": true
	},
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"globals": {
		"async": true,
		"await": true,
		"beforeAll": true,
		"describe": true,
		"expect": true,
		"it": true,
		"jest": true
	},
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 6
	},
	"root": true,
	"rules": {
		"comma-dangle": ["error", "only-multiline"],
		"keyword-spacing": 0,
		"max-len": ["error", 160],
		"no-trailing-spaces": 1,
		"require-jsdoc": 0,
		"semi": ["error", "never"],
		"space-before-function-paren": 0,
		"linebreak-style": 0
	}
}